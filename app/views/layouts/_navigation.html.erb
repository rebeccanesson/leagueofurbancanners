  <span class="icon-bar"></span>
  <span class="icon-bar"></span>
  <span class="icon-bar"></span>
</a>

<a class="brand" href="/">League of Urban Cannners</a>

<div class="nav-collapse collapse">
  <ul class="nav">
    <%- if @cms_site.present? %>
      <%- @cms_site.pages.root.children.published.each do |page| %>
        <%- if page.children.published.present? %>
          <li class="dropdown">
            <a class="dropdown-toggle" data-toggle="dropdown" href="#"><%= page.label %> <b class="caret"></b></a>

              <ul class="dropdown-menu">
                <li><%= link_to page.label, page.full_path %></li>
                <li class="divider">&mdash;</li>
                  <%- page.children.published.each do |child_page| %>
                    <li><%= link_to child_page.label, child_page.full_path %></li>
                  <%- end %>
              </ul>
        <%- else %>
          <li><%= link_to page.label, page.full_path %></li>
        <%- end %>
      <%- end %>
    <%- end %>
  </ul>
  <ul class="nav pull-right">
    <% if user_signed_in? %>
      <li class="dropdown">
        <a class="dropdown-toggle"
           data-toggle="dropdown"
           href="#">
            Database
            <b class="caret"></b>
          </a>
        <ul class="dropdown-menu">
          <li><%= link_to 'Sites', sites_path %></li>
          <li><%= link_to 'Site Map', map_sites_path %></li>
          <li><%= link_to 'Fruit Trees', fruit_trees_path %></li>
          <li><%= link_to 'Fruit', fruits_path %></li>
          <li><%= link_to 'People', people_path %></li>
          <li><%= link_to 'Harvests', harvests_path %></li>
          <li><%= link_to 'Canning Sessions', canning_sessions_path %></li>
          <li><%= link_to 'Prunings', prunings_path %></li>
        </ul>
      </li>
      <li class="dropdown">
        <a class="dropdown-toggle" data-toggle="dropdown" href="#"><%= current_user.email %> <b class="caret"></b></a>
        <ul class="dropdown-menu pull-right">
          <%- if current_user.can_edit_content? %>
            <li><%= link_to "CMS Management", "/cms-admin" %></li>
            <li class="divider">&mdash;</li>
          <%- end %>
          <li><%= link_to('My Account', edit_user_registration_path) %></li>
          <li><%= link_to('Logout', destroy_user_session_path, :method=>'delete') %></li>
        </ul>
      </li>
    <% else %>
      <li class="pull-right"><%= link_to('Login', new_user_session_path)  %></li>
    <% end %>
  </ul>
</div>
